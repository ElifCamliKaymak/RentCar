@model UpdateAboutVM

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hakkımda Güncelleme</h4>
                <form action="UpdateBanner" method="post">
                    <input type="hidden" asp-for="AboutId" />
                    <div class="row">
                        <div class="form-group col-6">
                            <label for="@Model.Title">Başlık</label>
                            <input asp-for="@Model.Title" type="text" class="form-control">
                        </div>
                        <div class="form-group col-6">
                            <label for="@Model.Description">Açıklama</label>
                            <textarea rows="5" asp-for="@Model.Description" type="text" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label for="@Model.ImageUrl">Fotoğraf URL</label>
                            <input asp-for="@Model.ImageUrl" type="text" class="form-control" placeholder="Kapak Fotoğrafının Linkini Giriniz">
                        </div>
                    </div>
                    <div class="btn-group">
                        <button type="submit" class="btn btn-primary waves-effect waves-light" data-toggle="tooltip" data-placement="bottom" title="Hakkımdayı Kaydet">
                            <i class="feather-save"></i>
                        </button>
                        <a class="btn btn-light" asp-action="Index" data-toggle="tooltip" data-placement="bottom" title="Listeye Dön">
                            <i class="fas fa-list"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
