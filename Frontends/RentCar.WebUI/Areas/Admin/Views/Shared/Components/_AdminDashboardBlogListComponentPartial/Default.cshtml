@model List<ResultBlogVM>

<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Başlıca Bloglar</h4>
            <p class="card-subtitle mb-4 font-size-13">
                Blog Başlıkları
            </p>

            <div class="table-responsive">
                <table class="table table-borderless table-hover table-centered table-nowrap mb-0">
                    <thead>
                        <tr>
                            <th>Blog Adı</th>
                            <th>Yazar</th>
                            <th>Blogu Aç</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">
                                        @item.title
                                    </h5>

                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">@item.authorName</h5>
                                    <span class="text-muted font-size-12">@item.createdDate.ToShortDateString()</span>
                                </td>
                                <td>
                                    <h5 class="font-size-17 mb-1 font-weight-normal">
                                        <a asp-area="" asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@item.blogId" type="button" class="btn btn-outline-dark waves-effect waves-light" data-toggle="tooltip" data-placement="bottom" title="Blogu Aç">
                                            <i class="mdi mdi-format-list-bulleted"></i>
                                        </a>
                                    </h5>                              
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div> <!-- end card-body-->
    </div> <!-- end card-->
</div> <!-- end col -->