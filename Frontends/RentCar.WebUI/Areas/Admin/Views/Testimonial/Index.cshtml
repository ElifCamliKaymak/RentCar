@model List<ResultTestimonialVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h4>Referanslar Yönetimi</h4>
                    <button asp-area="Admin"
                            asp-controller="Testimonial"
                            asp-action="CreateTestimonialPartial"
                            type="button"
                            class="btn btn-primary waves-effect waves-light mb-2"
                            data-toggle="modal"
                            data-target="#exampleModalCenter">
                        <i class="mdi mdi-plus"></i>
                        Referans Oluştur
                    </button>
                </div>

                <table id="datatable-buttons" class="table table-striped dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>Resim</th>
                            <th>İsim</th>
                            <th>Başlık</th>
                            <th>Yorum</th>
                            <th>Seçenekler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var testimonial in Model)
                        {
                            <tr>
                                <td><img width="50" height="50" src="@testimonial.imageUrl" /></td>
                                <td>@testimonial.name</td>
                                <td>@testimonial.title</td>
                                <td>@testimonial.comment</td>
                                <td>
                                    <div class="btn-group mr-2" role="group" aria-label="First group">
                                        <a asp-action="UpdateTestimonial" asp-route-id="@testimonial.testimonialId" type="button" class="btn btn-outline-warning waves-effect waves-light" data-toggle="tooltip" data-placement="bottom" title="Referansı Güncelle">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>
                                        <a asp-action="RemoveTestimonial" asp-route-id="@testimonial.testimonialId" type="button" class="btn btn-outline-danger waves-effect waves-light" data-toggle="tooltip" data-placement="bottom" title="Referansı Sil">
                                            <i class="mdi mdi-delete-outline"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="~/Areas/Admin/Views/Testimonial/CreateTestimonialPartial.cshtml" model="new CreateTestimonialVM()"></partial>
