@model List<ResultCarFeatureByCarIdVM>
@{
    ViewData["Title"] = "CarDetail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h4>Araca Ait Özellikler Listesi</h4>
                </div>
                <form method="post">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check">
                            <input type="hidden" asp-for="@Model[i].CarFeatureId" />
                            <input type="hidden" asp-for="@Model[i].FeatureName" />
                            <input type="hidden" asp-for="@Model[i].CarId" />
                            <input type="hidden" asp-for="@Model[i].FeatureId" />
                            <input type="checkbox" asp-for="@Model[i].Available" class="form-check-input" />
                            <label claa="form-check-label" for="@Model[i].Available">@Model[i].FeatureName</label>
                        </div>
                    }
                    <br />
                    <div>
                        <button class="btn btn-primary">Değişiklikleri Kaydet</button>
                        <button asp-controller="Car" asp-action="Index" class="btn btn-secondary">Araç Listesi</button>
                    </div>                    
                </form>
            </div>
        </div>
    </div>
</div>

