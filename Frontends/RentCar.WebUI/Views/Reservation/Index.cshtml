@model CreateReservationVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 block-9 mb-md-5">
    <form asp-controller="Reservation" asp-action="Index" method="post" class="bg-light p-5 contact-form">
        <h3>Araç Rezervayon Formu</h3>
        <input asp-for="CarId" value="@ViewBag.CarId" type="hidden" class="form-control">
        <div class="row">
            <div class="form-group col-4">
                <input asp-for="Name" type="text" class="form-control" placeholder="Adınız">
            </div>
            <div class="form-group col-4">
                <input asp-for="Surname" type="text" class="form-control" placeholder="Soyadınız">
            </div>
            <div class="form-group col-4">
                <input asp-for="Age" type="number" class="form-control" placeholder="Yaşınız">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-4">
                <input asp-for="Email" type="email" class="form-control" placeholder="Mail Adresiniz">
            </div>
            <div class="form-group col-4">
                <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Telefon Numaranız">
            </div>
            <div class="form-group col-4">
                <input asp-for="DriverLicenceYear" type="number" class="form-control" placeholder="Ehliyet Yılınız">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-4">
                <select asp-for="@Model.PickUpLocationId" class="form-control" asp-items="@ViewBag.Locations">
                    <option value="" disabled selected>Alacağınız Ofisi Seçiniz</option>
                </select>
            </div>
            <div class="form-group col-4">
                <select asp-for="@Model.DropOffLocationId" class="form-control" asp-items="@ViewBag.Locations">
                    <option value="" disabled selected>Teslim Ofisini Seçiniz</option>
                </select>
            </div>
            <div class="form-group col-4">
                <textarea asp-for="Description" cols="30" rows="7" class="form-control" placeholder="Eklemek istediklerinizi bu kısıma ekleyebilirsiniz..."></textarea>
            </div>
        </div>
        <div class="form-group col-4">
            <input type="submit" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
        </div>
    </form>

</div>

