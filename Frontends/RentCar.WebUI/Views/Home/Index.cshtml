@model CreateCarRentalProcessVM

@{
    ViewData["Title"] = "Anasayfa";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
@await Component.InvokeAsync("_HeadLayoutComponentPartial")
<body>
    @await Component.InvokeAsync("_NavbarLayoutComponentPartial")

    @await Component.InvokeAsync("_HomeCoverLayoutComponentPartial")

    <section class="ftco-section ftco-no-pt bg-light">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-md-12	featured-top">
                    <div class="row no-gutters">
                        <div class="col-md-4 d-flex align-items-center">
                            <form method="post" asp-action="Index" asp-controller="CarRental" class="request-form ftco-animate bg-primary">
                                <h2>Şimdi Aracınızı Kiralayın</h2>
                                <div>
                                    <div class="form-group">
                                        <label for="" class="label">Alınacak Ofis</label>
                                        <select asp-for="@Model.PickUpLocationId" class="form-control" asp-items="@ViewBag.Locations">
                                            <option value="" disabled selected>Seçiniz</option>
                                        </select>
                                    </div>
                                    <div class="form-group mr-2">
                                        <label for="" class="label">Alınmak İstenen Tarih</label>
                                        <input asp-for="@Model.PickUpDate" type="datetime-local" class="form-control">
                                    </div>
                                </div>
                                <div>
                                    <div class="form-group">
                                        <label for="" class="label">Teslim Edilecek Ofis</label>
                                        <select asp-for="@Model.DropOffLocationId" class="form-control" asp-items="@ViewBag.Locations">
                                            <option value="" disabled selected>Seçiniz</option>
                                        </select>
                                    </div>
                                    <div class="form-group ml-2">
                                        <label for="" class="label">Teslim Edilecek Tarih</label>
                                        <input asp-for="@Model.DropOffDate" type="datetime-local" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-secondary py-3 px-4">Teklifleri Göster</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-8 d-flex align-items-center">
                            <div class="services-wrap rounded-right w-100">
                                <h3 class="heading-section mb-4">Araç Kiralamanın En Basit Yolu</h3>
                                <div class="row d-flex mb-4">
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-route"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Almak İstediğin Konumu Seç</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-handshake"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">En İyi Teklifleri Gör</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-rent"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Kiralamayı Tamamla</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <p><a asp-action="Index" asp-controller="CarPricing" class="btn btn-primary py-3 px-4">Araç Fiyatlarımızı Görün</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @await Component.InvokeAsync("_HomeLastFiveCarsWithBrandsComponentPartial")

    @await Component.InvokeAsync("_AboutUsComponentPartial")

    @await Component.InvokeAsync("_ServiceComponentPartial")

    @await Component.InvokeAsync("_BecomeADriverComponentPartial")

    @await Component.InvokeAsync("_TestimonialComponentPartial")

    @await Component.InvokeAsync("_GetLastThreeBlogsWithAuthorListComponentPartial")

    @await Component.InvokeAsync("_HomeStaticsComponentPartial")

    @await Component.InvokeAsync("_FooterLayoutComponentPartial")

    @await Component.InvokeAsync("_ScriptLayoutComponentPartial")
</body>
</html>
