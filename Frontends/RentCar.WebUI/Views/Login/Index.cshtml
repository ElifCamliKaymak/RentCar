@model CreateLoginVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Xacton - Admin & Dashboard Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="MyraStudio" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/admin-area/assets/images/favicon.ico">

    <!-- App css -->
    <link href="~/admin-area/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/admin-area/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/admin-area/assets/css/theme.min.css" rel="stylesheet" type="text/css" />

</head>

<body>

    <div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex align-items-center min-vh-100">
                        <div class="w-100 d-block bg-white shadow-lg rounded my-5">
                            <div class="row">
                                <div class="col-lg-5 d-none d-lg-block bg-login rounded-left"></div>
                                <div class="col-lg-7">
                                    <div class="p-5">
                                        <div class="text-center mb-5">
                                            <a asp-area="" asp-controller="Home" asp-action="Index" class="text-dark font-size-22 font-family-secondary">
                                                <b>RentCar</b>
                                            </a>
                                        </div>
                                        <h1 class="h5 mb-1">Tekrar Hoşgeldin!</h1>
                                        <p class="text-muted mb-4">Admin sayfasına erişim için lütfen giriş yapınız.</p>
                                        <form class="user" method="post">
                                            <div class="form-group">
                                                <input type="text" class="form-control form-control-user" id="exampleInputEmail" asp-for="UserName" placeholder="Kullanıcı Adınız">
                                            </div>
                                            <div class="form-group">
                                                <input type="password" class="form-control form-control-user" id="exampleInputPassword" asp-for="Password" placeholder="Şifreniz">
                                            </div>
                                            <button href="" class="btn btn-success btn-block waves-effect waves-light">Giriş Yap </button>
                                        </form>

                                        <div class="row mt-4">
                                            <div class="col-12 text-center">
                                                <p class="text-muted mb-2"><a href="pages-recoverpw.html" class="text-muted font-weight-medium ml-1">Şifremi unuttum</a></p>
                                                <p class="text-muted mb-0">Bir hesabınız yok mu? <a asp-controller="Register" asp-action="Index" class="text-muted font-weight-medium ml-1"><b>Kayıt Ol</b></a></p>
                                            </div> <!-- end col -->
                                        </div>
                                        <!-- end row -->
                                    </div> <!-- end .padding-5 -->
                                </div> <!-- end col -->
                            </div> <!-- end row -->
                        </div> <!-- end .w-100 -->
                    </div> <!-- end .d-flex -->
                </div> <!-- end col-->
            </div> <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->
    <!-- jQuery  -->
    <script src="~/admin-area/assets/js/jquery.min.js"></script>
    <script src="~/admin-area/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin-area/assets/js/metismenu.min.js"></script>
    <script src="~/admin-area/assets/js/waves.js"></script>
    <script src="~/admin-area/assets/js/simplebar.min.js"></script>

    <!-- App js -->
    <script src="~/admin-area/assets/js/theme.js"></script>

</body>

</html>