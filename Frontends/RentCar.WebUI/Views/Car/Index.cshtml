@model List<ResultCarPricingWithCarVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var car in Model)
            {
                <div class="col-md-4">
                    <div class="car-wrap rounded ftco-animate">
                        <div class="img rounded d-flex align-items-end" style="background-image: url(@car.CoverImageUrl);">
                        </div>
                        <div class="text">
                            <h2 class="mb-0"><a href="car-single.html">@car.Model</a></h2>
                            <div class="d-flex mb-3">
                                <span class="cat">@car.BrandName</span>
                                <p class="price ml-auto">@car.Amount<span>/günlük</span></p>
                            </div>
                            <p class="d-flex mb-0 d-block">
                                <a asp-controller="Reservation" asp-action="Index" asp-route-id="@car.CarId" class="btn btn-primary py-2 mr-1">Hemen Kirala</a>
                                <a asp-controller="Car" asp-action="CarDetails" asp-route-id="@car.CarId" class="btn btn-secondary py-2 ml-1">Detaylar</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

