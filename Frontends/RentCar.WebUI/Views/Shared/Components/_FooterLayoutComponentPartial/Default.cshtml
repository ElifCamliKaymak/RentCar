@model ResultFooterAddressVM

<footer class="ftco-footer ftco-bg-dark ftco-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2"><a asp-action="Index" asp-controller="Home" class="logo">Rent<span>Car</span></a></h2>
                    <p>@Model.Description </p>
                    <ul class="ftco-footer-social list-unstyled float-md-left float-lft mt-5">
                        <li class="ftco-animate"><a href="#"><span class="icon-twitter"></span></a></li>
                        <li class="ftco-animate"><a href="#"><span class="icon-facebook"></span></a></li>
                        <li class="ftco-animate"><a href="#"><span class="icon-instagram"></span></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4 ml-md-5">
                    <h2 class="ftco-heading-2">Bilgilendirme</h2>
                    <ul class="list-unstyled">
                        <li><a asp-action="Index" asp-controller="About" class="py-2 d-block">Hakkımızda</a></li>
                        <li><a asp-action="Index" asp-controller="Car" class="py-2 d-block">Hizmetlerimiz</a></li>
                        <li><a href="#" id="btn1" class="py-2 d-block">Şartlar ve Koşullar</a></li>
                        <li><a href="#" id="btn2" class="py-2 d-block">Güvenlik</a></li>
                        <li><a href="#" id="btn3" class="py-2 d-block">Çerez Politikası</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2">Müşteri Desteği</h2>
                    <ul class="list-unstyled">
                        <li><a href="#" id="btn4" class="py-2 d-block">Sıkça Sorulanlar</a></li>
                        <li><a href="#" id="btn5" class="py-2 d-block">Ödeme Yöntemleri</a></li>
                        <li><a asp-action="Index" asp-controller="CarPricing" class="py-2 d-block">Kiralama</a></li>
                        <li><a href="#" id="btn6" class="py-2 d-block">Nasıl Çalışır</a></li>
                        <li><a asp-action="Index" asp-controller="Contact" class="py-2 d-block">Bize Ulaşın</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2">Have a Questions?</h2>
                    <div class="block-23 mb-3">
                        <ul>
                            <li><span class="icon icon-map-marker"></span><span class="text">@Model.Address</span></li>
                            <li><span class="icon icon-phone"></span><span class="text">@Model.PhoneNumber</span></li>
                            <li><a href="mailto:camlielif@gmail.com"><span class="icon icon-envelope"></span><span class="text">@Model.Email</span></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">

                <p>
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="icon-heart color-danger" aria-hidden="true"></i> by ElifK.
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                </p>
            </div>
        </div>
    </div>
</footer>

<div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
    $('#btn1').click(function () {
        swal("Şartlar & Koşullar", "Araba kiralama sürecine dair tüm hizmet koşullarına rezervasyonun fiziki olarak gerçekleştirileceği ofislerimizde yer alan anlaşma dokümanlarından ulaşabilirsiniz. Bütün sürecin hasar, ceza, geçişler(hgs, ogs vs.) ile ilgili detaylar yer almaktadır. Keyifli yolculuklar dileriz.");
    });

    $('#btn2').click(function () {
        swal("Güvenlik", "RentCar web sitemiz AspNet Core teknolojisinde Sha256 şifreleme tekniğiyle verilerin tamamen şifreli olarak tutulması altyapısına sahiptir. Sistemimizde JWT doğrulaması yapılmaktadır. Kullanıcılarımızın ödeme yaptıkları kart bilgileri sistemde kesinlikle saklanmamaktadır. Türkiye Cumhuriyeti kimlik numarası, mail adresi ve telefon gibi bilgiler ise şifrelenerek tutulmaktadır.");
    });

    $('#btn3').click(function () {
        swal("Çerez Politikası", "Sizlere daha iyi hizmet sunabilmek adına tarayıcı çerezlerini kullanmaktayız.");
    });
    $('#btn4').click(function () {
        swal("ÇSıkça Sorulan Sorular", "Sistem ile ilgili sık sorulan sorular yer alır.");
    });
    $('#btn5').click(function () {
        swal("Ödeme Yöntemleri", "Ödeme işlemleri yalnızca fiziki lokasyonlarımızdaki kiralama noktalarında kart ile yapılmaktadır.");
    });
    $('#btn6').click(function () {
        swal("Nasıl Çalışır", "1. Aracınızın rezervasyonunu yapın.\n2. Mailinizi kontrol edin.\n3. Ofisimize gelin.");
    });
</script>

