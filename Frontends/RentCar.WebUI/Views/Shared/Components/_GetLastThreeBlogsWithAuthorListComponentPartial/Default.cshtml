@model List<ResultLastThreeBlogsWithAuthorsVM>

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <span class="subheading">Bloglar</span>
                <h2>Son Bloglar</h2>
            </div>
        </div>
        <div class="row d-flex">
            @foreach (var blog in Model)
            {
                <div class="col-md-4 d-flex ftco-animate">
                    <div class="blog-entry justify-content-end">
                        <a asp-action="BlogDetail" asp-controller="Blog" asp-route-id="@blog.BlogId" class="block-20" style="background-image: url('@blog.CoverImageUrl');">
                        </a>
                        <div class="text pt-4">
                            <div class="meta mb-3">
                                <div>@blog.CreatedDate.ToShortDateString()</div>
                                <br/>
                                <div>@blog.AuthorName</div>
                            </div>
                            <h3 class="heading mt-2"><a href="#">@blog.Title</a></h3>
                            <p><a asp-action="BlogDetail" asp-controller="Blog" asp-route-id="@blog.BlogId" class="btn btn-primary">Devamını Oku</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>